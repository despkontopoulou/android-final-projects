<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TellaTale"
        tools:targetApi="31">
        <activity
            android:name=".activities.StatsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.FavouritesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.StoryPage"
            android:exported="false" />
        <activity
            android:name=".activities.StoriesMainActivity"
            android:exported="false" />
        <!--
<activity
            android:name=".stories_main"
            android:exported="false"
            android:label="@string/title_activity_stories_main"
            android:theme="@style/Theme.TellaTale" />
        -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>